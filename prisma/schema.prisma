// This is your Prisma schema file for TimescaleDB
// TimescaleDB is PostgreSQL-compatible with time-series extensions

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Example time-series model (SQLite version)
model TimeSeriesData {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  metric    String
  value     Float
  tags      String?  // JSON string for SQLite
  
  @@index([timestamp, metric])
  @@map("time_series_data")
}

// User model example
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

// Example sensor data model
model SensorData {
  id          String   @id @default(cuid())
  sensorId    String
  timestamp   DateTime @default(now())
  temperature Float?
  humidity    Float?
  pressure    Float?
  location    String?
  
  @@index([sensorId, timestamp])
  @@index([timestamp])
  @@map("sensor_data")
}
